<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerPackage.AddReviewActivity">

    <include layout="@layout/toolbar_staff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/quicksand_medium"
        android:text="Are you satisfied with our restaurant?"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/rate1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/star" />

        <ImageView
            android:id="@+id/rate2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/star" />

        <ImageView
            android:id="@+id/rate3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/star" />

        <ImageView
            android:id="@+id/rate4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/star" />

        <ImageView
            android:id="@+id/rate5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/star" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Tell us your opinion."
        android:fontFamily="@font/quicksand_medium"
        android:textSize="16sp" />

    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/reviewContent"
        android:layout_width="360dp"
        android:layout_height="230dp"
        android:background="@drawable/rounded_review"
        android:padding="10dp"
        android:gravity="start"
        android:hint="Enter your opinion here."
        android:scrollbars="vertical"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/roboto"
        android:text="Submit"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>