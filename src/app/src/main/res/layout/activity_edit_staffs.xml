<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminPackage.EditStaffsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <TextView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto"
                android:text="@string/name"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editStaffsName"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_corner_box_bg_design"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp" />

            <TextView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/email"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editStaffsEmail"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_corner_box_bg_design"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp" />

            <TextView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/phone_number"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editStaffsPhone"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_corner_box_bg_design"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:paddingHorizontal="10dp" />

            <TextView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/gender"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/editStaffsGender"
                android:layout_width="310dp"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <RadioButton
                    android:id="@+id/editStaffsMale"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/male"
                    android:textColor="@color/grey" />

                <RadioButton
                    android:id="@+id/editStaffsFemale"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/female"
                    android:textColor="@color/grey" />
            </RadioGroup>

            <TextView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/role"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editStaffsRole"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_corner_box_bg_design"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingHorizontal="10dp" />

            <Button
                android:id="@+id/btn_edit_staff_done"
                android:layout_width="310dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/roboto"
                android:text="@string/done"
                android:textSize="24sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>